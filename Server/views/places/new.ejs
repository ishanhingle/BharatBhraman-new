<%layout('layouts/boilerplate')%>
  <div class="row">
    <h1 class="text-center">add a new place</h1>
    <div class="col-6 offset-3">
      <form action="/places/new" method="post" class="needs-validation form text-uppercase fw-bold" novalidate enctype="multipart/form-data">
        <label for="name" class="form-label">name of the place</label>
        <input type="text" class="form-control" name="place[name]" id="name" required>
        <div class="invalid-feedback text-capitalize-small fw-medium">
          Please choose a name.
        </div>
        <div class="valid-feedback">

        </div>
         
        <label for="price" class="form-label">price of the place</label>
        <input type="text" class="form-control" name="place[price]" id="price" required>
        <div class="invalid-feedback text-capitalize-small fw-medium">
          Please choose a place.
        </div>
        <div class="valid-feedback">
         
        </div>
        <div>
          <label for="description" class="form-label">description:</label>
        <textarea rows="3" class="form-control" cols="30" id="description" required name="place[description]"></textarea>
        <div class="invalid-feedback text-capitalize-small fw-medium">
          Please write description.
        </div>
        <div class="valid-feedback">
          
        </div>
        </div>
        

        <label for="location" class="form-label">location of the place</label>
        <input type="text" class="form-control" name="place[location]" id="location" required>
        <div class="invalid-feedback text-capitalize-small fw-medium">
          Please provide location.
        </div>
        <div class="valid-feedback">
           
        </div>

        <label for="image" class="form-label">Upload images</label>
        <input type="file" name="place[image]" class="form-control " id="image" required multiple>
        <div class="invalid-feedback text-capitalize-small fw-medium">
          Please provide image link.
        </div>
        <div class="valid-feedback">
          
        </div>
        <button type="submit" class="btn btn-primary mt-3">submit</button>
      </form>

    </div>
  </div>
  <script src="/scripts/formvalidation.js"></script>